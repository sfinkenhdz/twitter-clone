<%= form_for(@tweet, html: {multipart: true}) do |f| %>
  <div class="errors">
    <% if @tweet.errors.any? %>
      <ul>
        <% @tweet.errors.full_messages.each do |error| %>
          <li><%= error %></li>
       <% end %>
      </ul>
    <% end %>
  <div>
    <%= f.text_area :content, placeholder: "What's happening?", class: "new-tweet-content" %>
  </div>
  <div>
    <% if @tweet.image.exists? %>
        <%= image_tag @tweet.image.url %><br/>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </div>
      <%= f.submit "Tweet", class: "new-tweet-submit" %>
<% end %>